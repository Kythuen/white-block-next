{
  "compilerOptions": {
    "module": "ESNext",
    "target": "ESNext",
    "moduleResolution": "Node",
    "lib": ["ESNext", "DOM"],
    "strict": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "types": ["node", "vite/client", "vitest/importMeta"],
    "jsx": "preserve",
    "baseUrl": ".",
    "paths": {
      "~/*": ["docs/.vitepress/*"],
      "@/*": ["packages/core/src"]
    }
  },
  "exclude": ["**/dist/**", "**/node_modules/**"]
}
