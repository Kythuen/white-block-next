{
  "compilerOptions": {
    "module": "ESNext",
    "target": "ES2018",
    "moduleResolution": "Bundler",
    "lib": ["ESNext", "DOM"],
    "strict": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "types": ["node", "vite/client", "vitest/importMeta"],
    "jsx": "preserve",
    "baseUrl": ".",
    "paths": {
      "~/*": ["docs/.vitepress/*"],
      "@/*": ["packages/core/src/*"]
    }
  },
  "exclude": [
    "node_modules",
    "**/dist/**",
    "**/__tests__/**",
    "**/examples/**",
    "packages/cli/files/**",
    "packages/playground/**/template/**"
  ]
}
