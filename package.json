{
  "name": "@white-block/monorepo",
  "version": "1.1.0",
  "description": "Intuitive Design for Effortless Development",
  "keywords": [
    "components",
    "ui library",
    "white block",
    "Vue"
  ],
  "author": {
    "name": "ephemeras",
    "email": "ephemeras@qq.com"
  },
  "license": "MIT",
  "scripts": {
    "preinstall": "npx only-allow pnpm",
    "docs:dev": "pnpm -C docs dev",
    "docs:build": "pnpm -C docs build",
    "docs:preview": "pnpm -C docs preview",
    "test": "pnpm --filter ./packages/** test",
    "test:coverage": "pnpm --filter ./packages/** test:coverage",
    "build": "pnpm --filter ./packages/** build",
    "clear": "rimraf 'packages/*/{dist,node_modules}' && rimraf node_modules",
    "change": "changeset",
    "change:version": "changeset version",
    "release": "pnpm --recursive --stream build && changeset publish",
    "prepare": "husky install"
  },
  "publishConfig": {
    "registry": "https://registry.npmjs.org/",
    "access": "public"
  },
  "devDependencies": {
    "@changesets/cli": "^2.27.7",
    "@commitlint/cli": "17.4.4",
    "@commitlint/config-conventional": "17.4.4",
    "@types/node": "^20.5.1",
    "@typescript-eslint/eslint-plugin": "6.7.0",
    "@typescript-eslint/parser": "6.7.0",
    "@vitest/coverage-istanbul": "^2.1.1",
    "@vitest/coverage-v8": "^2.1.1",
    "commitizen": "4.3.0",
    "cz-conventional-changelog": "3.3.0",
    "eslint": "8.35.0",
    "eslint-config-airbnb-base": "15.0.0",
    "eslint-config-prettier": "8.6.0",
    "eslint-import-resolver-typescript": "^3.6.3",
    "eslint-plugin-import": "2.27.5",
    "eslint-plugin-prettier": "5.1.3",
    "eslint-plugin-vue": "9.13.0",
    "husky": "8.0.3",
    "jsdom": "^25.0.1",
    "lint-staged": "13.1.2",
    "prettier": "^3.3.3",
    "rimraf": "^6.0.1",
    "tsup": "^8.2.4",
    "tsx": "^4.19.1",
    "typescript": "5.0.2",
    "unocss": "^0.62.2",
    "vite": "^5.4.0",
    "vitest": "^2.1.1"
  }
}
